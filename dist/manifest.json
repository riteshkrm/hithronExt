{
  "manifest_version": 3,
  "name": "Load",
  "version": "1.0.0",
  "description": "Load - Manage your loads efficiently",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "asset/icons/icon16.png",
      "48": "asset/icons/icon48.png",
      "128": "asset/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "icons": {
    "16": "asset/icons/icon16.png",
    "48": "asset/icons/icon48.png",
    "128": "asset/icons/icon128.png"
  },
  "permissions": ["identity", "storage", "tabs"],

  "host_permissions": [
    "https://accounts.google.com/*" ,
    "https://www.googleapis.com/*"
    ],

  "oauth2": {
    "client_id": "657086928638-qasuviu81ojv310bg5t29h5hm4oolfao.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },

  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
